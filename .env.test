NODE_ENV=development
PORT=5000
#only for docker
# MONGO_URL=mongodb://db:27017/erap-test
#only for local
MONGO_URL=mongodb://127.0.0.1:27017/erap-test
MONGO_DB_NAME=erap-test
# MONGO_DB_NAME=erap
BASE_URL=http://localhost:5000

# JWT secret key
JWT_SECRET=thisisasamplesecret
# Number of minutes after which an access token expires
JWT_ACCESS_EXPIRATION_MINUTES=30
# Number of days after which a refresh token expires
JWT_REFRESH_EXPIRATION_DAYS=30
# Number of minutes after which a reset password token expires
JWT_RESET_PASSWORD_EXPIRATION_MINUTES=10
# Number of minutes after which a verify email token expires
JWT_VERIFY_EMAIL_EXPIRATION_MINUTES=10

# SMTP configuration options for the email service
# For testing, you can use a fake SMTP service like Ethereal: https://ethereal.email/create
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=email-server-username
SMTP_PASS=email-server-password
EMAIL_FROM=support@ourApp.com


# URL of client application
CLIENT_URL=http://localhost:5000

# payment gateway
CHAPA_PUB_KEY=CHAPUBK_TEST-xxxx-xxxx-xxxx-xxxx
CHAPA_SECRETE_KEY=CHASECK_TEST-xxxx-xxxx-xxxx-xxxx
CHAPA_INITIATE_PAYMENT_URL=https://api.chapa.co/v1/transaction/initialize
CHAPA_VERIFY_PAYMENT_URL=https://api.chapa.co/v1/transaction/verify/